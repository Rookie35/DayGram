<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/year_tabbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackground"
        android:fadingEdge="none"
        android:overScrollMode="always"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <TextView
                android:id="@+id/first_year"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:text="2018"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/second_year"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:text="2019"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/third_year"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:text="2020"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fourth_year"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:text="2021"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fifth_year"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:text="2022"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sixth_year"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:text="2023"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seventh_year"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:text="2024"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eighth_year"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:text="2025"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </HorizontalScrollView>
</RelativeLayout>